<div class="row">
  <div class="col s12">
    <h3>{{story.title}}</h3>
  </div>
</div>

<div class="row">
  <div class="col s12 m8">
    <div class="card story">
      <div class="card-content">
        <span class="card-title">
          {{formatDate story.date 'MMMM Do YYYY'}}
        </span>
        {{{story.body}}}
      </div>
    </div>

    {{#if story.allowComments}}
      <div class="card">
        <div class="card-content">
          <span class="card-title">Comments</span>
          {{#if user}}
            <form action="/stories/{{story.id}}/comment" method="post">
              <div class="input-field">
                <textarea name="commentBody" class="materialize-textarea"
                  cols="30" rows="10"></textarea>
                <label>Add Comment</label>
                <input type="submit" value="Submit" class="btn" />
              </div>
            </form>
          {{else}}
            <p>Please <a href="/auth/google">sign in</a> to leave a comment</p>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>

  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">
          {{story.user.firstName}} {{story.user.lastName}}
        </span>
        <img src="{{story.user.image}}" class="circle responsive-img">
      </div>

      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">
          More From {{story.user.firstName}}
        </a>
      </div>
    </div>
  </div>
</div>
